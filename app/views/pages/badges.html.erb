<h3 class="header-font pt-4 animated fadeIn" style="margin:0;padding:0;color:#fcca49;">winged</h3>
<h1 class="display-1 mb-2 animated fadeIn">Honours</h1>
<h3 class="pb-4 pt-3"><span style="color:#fcca49"><%= @user.create_badges.select{|badge| badge[:unlocked]}.count %></span> out <%= @user.create_badges.count %> Badges unlocked</h3>
<h4 style="font-weight:300;">My XP: <span style="color:#fcca49"><%= current_user.user_xp %> </span>pts</h4>
<div class="badge-grid mt-4">
  <% @user.create_badges.each_with_index do |badge, index| %>

    <div class="mb-4 badge animated fadeIn" style="background-color: <%= badge[:unlocked] ?  "#fcca49" : "#6e6e6e" %>; filter: <%= badge[:unlocked] ? '' : 'blur(10px);' %>; animation-delay:  <%= index+1 / 5%>s">
      <%= image_tag badge[:badge_img] %>
        <h6 style="color:black;"><%= badge[:name] %></h6>
      <% unless badge[:unlocked] %>
      <% end %>
    </div>
  <% end %>
</div>
